<div class="col-md-6 col-md-offset-3 background-box ">
        <h1> <%= t('edit_book')%> </h1>
        <hr>
        <%= simple_form_for @book, :html => {:multipart => true} do |f|  %>
        <%= f.input :title, label: t('book_title') %>
        <%= f.input :description, label: t('description') %>
        <%= f.input :author, label: t('author') %>
        <%= f.input :isbn, label: "رمز ISBN "  %>
        <%= f.input :price, label: t('price') %>
        <%= f.input :book_img, as: :file %>
        <%= f.select :category_id, @categories,label: t('category') %>
        <hr>
        <%= f.button :submit,t('edit_book') , class: 'btn btn-success' %>

    <% end %>
</div>



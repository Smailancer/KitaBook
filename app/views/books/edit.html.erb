<div class="col-md-6 col-md-offset-3 background-box ">
        <h1> <%= t('edit_book')%> </h1>
        <hr>
        <%= simple_form_for @book, :html => {:multipart => true} do |f|  %>
        <%= f.select :category_id, @categories %>
        <%= f.input :book_img, as: :file %>
        <%= f.input :title, label: "Book Title" %>
        <%= f.input :description %>
        <%= f.input :author %>
        <%= f.input :price %>
        <%= f.input :isbn, label: "ISBN"  %>
        <%= f.button :submit, class: "btn btn-success", label: t('new_book')  %>

    <% end %>
</div>
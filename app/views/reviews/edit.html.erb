
<div class="col-md-6 col-md-offset-3 background-box">
    <h1>Edit Review </h1>
    <hr>
    <%= simple_form_for([@book, @review]) do |f| %>
        <div id="rating-form">
            <label>Rating</label>
        </div>
        <%= f.input :comment %>
        <%= f.button :submit %>
        
    <% end %>
</div>

<script>
    $('#rating-form').raty({
        half: true,
        path: '/assets/',
        scoreName: 'review[rating]'
    });
</script>

